{% extends '::base.html.twig' %}
{% form_theme edit_form 'form_table_layout.html.twig'  %}

{% block body -%}
    <h1>Movies edit</h1>

    <form action="{{ path('movies_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
        <input type="hidden" name="_method" value="PUT" />
        {{ form_errors(edit_form) }}
        {{ form_row(edit_form.title) }}<br/>
        {{ form_row(edit_form.description) }}<br/><br/>
        {{ form_row(edit_form.translations) }}
        {{ form_row(edit_form.quality) }}
        {{ form_row(edit_form.actor) }}
        <ul class="new_actor" data-prototype="{{ form_widget(edit_form.new_actor.vars.prototype)|e }}"></ul>
        {{ form_row(edit_form.tag) }}
        <ul class="new_tag" data-prototype="{{ form_widget(edit_form.new_tag.vars.prototype)|e }}"></ul>
        {{ form_rest(edit_form) }}
        <p>
            <button type="submit">Edit</button>
        </p>
    </form>

        <ul class="record_actions">
    <li>
        <a href="{{ path('movies') }}">
            Back to the list
        </a>
    </li>
    <li>
        <form action="{{ path('movies_delete', { 'id': entity.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
{% endblock %}
