{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Books edit</h1>

    <form action="{{ path('books_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
        <input type="hidden" name="_method" value="PUT" />
        {{ form_errors(edit_form) }}
        {{ form_row(edit_form.title) }}
        {{ form_row(edit_form.description) }}
        {{ form_row(edit_form.author) }}
        <ul class="new_author" data-prototype="{{ form_widget(edit_form.new_author.vars.prototype)|e }}"></ul>
        {{ form_row(edit_form.tag) }}
        <ul class="new_tag" data-prototype="{{ form_widget(edit_form.new_tag.vars.prototype)|e }}"></ul>
        {{ form_rest(edit_form) }}
        <p>
            <button type="submit">Edit</button>
        </p>
    </form>

        <ul class="record_actions">
    <li>
        <a href="{{ path('books') }}">
            Back to the list
        </a>
    </li>
    <li>
        <form action="{{ path('books_delete', { 'id': entity.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
{% endblock %}
