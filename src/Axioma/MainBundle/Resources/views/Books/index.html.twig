{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Books list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Description</th>
                <th>Author</th>
                <th>Tag</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('books_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.title }}</td>
                <td>{{ entity.description }}</td>
                <td>
                {% for author in entity.author %}
                    {{ author.name }}{% if not loop.last %},{% endif %}
                {% endfor %}
                </td>
                <td>
                {% for tag in entity.tag %}
                    {{ tag.name }}{% if not loop.last %},{% endif %}
                {% endfor %}
                </td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('books_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('books_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('books_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
